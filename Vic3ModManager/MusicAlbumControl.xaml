<UserControl x:Class="Vic3ModManager.MusicAlbumControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="musicAlbumControl"
             Margin="0,5"
             MinHeight="100" MinWidth="100"
             Cursor="Hand">

    <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="10" Padding="5">
        <Border.Background>
            <ImageBrush ImageSource="{Binding AlbumImage, ElementName=musicAlbumControl}" Stretch="UniformToFill" TileMode="None" Opacity="0.61"/>
        </Border.Background>
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="{Binding Title, ElementName=musicAlbumControl}" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock Text="{Binding AdditionalInfo, ElementName=musicAlbumControl}" HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
