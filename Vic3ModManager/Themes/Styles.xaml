<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="FormItemMargin">0, 12</Thickness>
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FF313131"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="10, 5"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="FormInfoStyle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="{StaticResource FormItemMargin}"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#FF313131"/>
        <Setter Property="Foreground" Value="#FF313131"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!--<Setter Property="Margin" Value="{StaticResource FormItemMargin}"/>-->
    </Style>
    <Style TargetType="local:AnimatedPlaceholderTextBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="{StaticResource FormItemMargin}"/>
    </Style>

</ResourceDictionary>